@model LocadoraVeiculos.WebApplication.ViewModels.FuncionarioIndexViewModel

@section Header {

    @{await Html.RenderPartialAsync("_Header");}
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus"></i>
        <span> Cadastrar Funcionario</span>
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr class="rowA1">
            <th scope="col">
                <label asp-for="Registros[0].Id"></label>
            </th>
            <th scope="col">
                <label asp-for="Registros[0].Nome"></label>
            </th>
            <th scope="col">
                <label asp-for="Registros[0].Usuario"></label>
            </th>
            <th scope="col">
                <label asp-for="Registros[0].DataAdmissao"></label>
            </th>
            <th scope="col">
                <label asp-for="Registros[0].Senha"></label>
            </th>
            <th scope="col">
                <label asp-for="Registros[0].Salario"></label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Registros)
        {
        <tr>
            <th scope="row">
                <label>@item.Id</label>
            </th>
            <td>
                <label>@item.Nome</label>
            </td>
            <td>
                <label>@item.Usuario</label>
            </td>
            <td>
                <label>@item.DataAdmissao</label>
            </td>
            <td>
                <label>@item.Senha</label>
            </td>
            <td>
                <label>@item.Salario</label>
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i>
                </a> |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                    <i class="far fa-edit"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                    <i class="far fa-trash-alt"></i>
                </a>

            </td>
        </tr>
        }
    </tbody>
</table>

